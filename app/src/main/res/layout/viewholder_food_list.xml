<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="280dp"
    android:layout_height="300dp"
    android:layout_gravity="bottom|top"
    android:orientation="horizontal"
    tools:context="Activity.Activity.MainActivity"
    style="@style/ConstraintLayout">

    <ImageView
        android:id="@+id/puri"
        android:layout_width="266dp"
        android:layout_height="147dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/puri"
        app:layout_constraintBottom_toTopOf="@+id/timetxt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="73dp"
        android:layout_height="55dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="98dp"
        android:src="@drawable/img_3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/timetxt"
        app:layout_constraintStart_toStartOf="@+id/puri"
        app:layout_constraintTop_toBottomOf="@+id/titletxt"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="42dp"
        android:layout_height="32dp"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="107dp"
        android:src="@drawable/img_4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/puri"
        app:layout_constraintStart_toEndOf="@+id/timetxt"
        app:layout_constraintTop_toBottomOf="@+id/puri"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/titletxt"
        android:layout_width="81dp"
        android:layout_height="25dp"
        android:layout_marginBottom="6dp"
        android:text="For Rs 99"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.949"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/puri"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/timetxt"
        android:layout_width="77dp"
        android:layout_height="50dp"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="87dp"
        android:text="Puri chhola"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageView"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/scoretxt"
        android:layout_width="39dp"
        android:layout_height="23dp"
        android:layout_marginBottom="84dp"
        android:text="20min"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.763"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />
</androidx.constraintlayout.widget.ConstraintLayout>